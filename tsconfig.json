{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "declaration": false,
    "esModuleInterop": true,
    "lib": ["es2017", "es2016", "es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
  },
  "include": ["src/**/*", ".eslintrc.js", "jest.config.js"]
}
